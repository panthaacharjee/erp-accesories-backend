{
  "compilerOptions": {
    "allowJs": true,        // Allow JS file imports
    "checkJs": true,        // Optional: Enable JS type checking
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
     "types": ["node"],
      "typeRoots": ["./node_modules/@types", "./src/types"],
    // "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
